<?xml version="1.0" encoding="UTF-8"?>
<extension xmlns="https://lime.openfl.org/project/1.0.4" xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://lime.openfl.org/project/1.0.4 https://lime.openfl.org/xsd/project-1.0.4.xsd">

	<assets path="project/vlc/plugins/Windows" rename="plugins" if="windows" />

	<section if="windows">
		<dependency path="project/vlc/lib/Windows/libvlc.dll" />
		<dependency path="project/vlc/lib/Windows/libvlccore.dll" />
	</section>

	<section if="mac">
		<assets path="project/vlc/lib/MacOS" rename="../MacOS/lib" />
		<assets path="project/vlc/plugins/MacOS" rename="../MacOS/plugins" />
	</section>

	<section if="android">
		<ndll name="c++_shared" dir="project/vlc/lib" />
		<ndll name="vlc" dir="project/vlc/lib" />
	</section>

	<source path="src" />

</extension>
