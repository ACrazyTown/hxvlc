<?xml version="1.0" encoding="UTF-8"?>
<xml>
	<pragma once="true" />

	<files id="haxe">
		<compilerflag value="-I${haxelib:hxvlc}/project/vlc/include" unless="linux" />
	</files>

	<files id="__main__">
		<compilerflag value="-I${haxelib:hxvlc}/project/vlc/include" unless="linux" />
	</files>

	<target id="haxe">
		<vflag name="-rpath" value="@executable_path/lib/" if="macos" />

		<section if="windows">
			<lib name="${haxelib:hxvlc}/project/vlc/lib/Windows/libvlc.lib" />
			<lib name="${haxelib:hxvlc}/project/vlc/lib/Windows/libvlccore.lib" />
		</section>

		<section if="macos">
			<lib name="${haxelib:hxvlc}/project/vlc/lib/MacOS/libvlc.dylib" />
			<lib name="${haxelib:hxvlc}/project/vlc/lib/MacOS/libvlccore.dylib" />
		</section>

		<section if="linux">
			<lib name="-lvlc" />
			<lib name="-lvlccore" />
		</section>

		<section if="ios">
			<dependency name="AudioToolbox.framework" />
                        <dependency name="AVFoundation.framework" />
                        <dependency name="CFNetwork.framework" />
                        <dependency name="CoreFoundation.framework" />
                        <dependency name="CoreGraphics.framework" />
                        <dependency name="CoreMedia.framework" />
			<dependency name="CoreText.framework" />
			<dependency name="CoreVideo.framework" />
			<dependency name="Foundation.framework" />
                        <dependency name="libbz2.tbd" />
                        <dependency name="libc++.tbd" />
                        <dependency name="libiconv.tbd" />
                        <dependency name="libxml2.tbd" />
			<dependency name="OpenGLES.framework" />
			<dependency name="QuartzCore.framework" />
			<dependency name="Security.framework" />
			<dependency name="VideoToolbox.framework" />
			<dependency name="CoreImage.framework" />
                </section>

		<section if="android">
			<lib name="${haxelib:hxvlc}/project/vlc/lib/Android/libvlc-64.so" if="HXCPP_ARM64" />
			<lib name="${haxelib:hxvlc}/project/vlc/lib/Android/libvlc-v7.so" if="HXCPP_ARMV7" />
			<lib name="${haxelib:hxvlc}/project/vlc/lib/Android/libvlc-x86.so" if="HXCPP_X86" />
			<lib name="${haxelib:hxvlc}/project/vlc/lib/Android/libvlc-x86_64.so" if="HXCPP_X86_64" />
		</section>
	</target>
</xml>
